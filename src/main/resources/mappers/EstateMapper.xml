<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.penguin.spring.test.estate.repository.EstateRepository">
 	<!-- 메소드 연걸  -->
 	<select id ="selectEstate" 
 	resultType="com.penguin.spring.test.estate.domain.Estate">
 		SELECT
 			`id`
 			,`realtorId`
 			,`address`
 			,`area`
 			,`type`
 			,`price`
 			,`rentPrice`
 			,`createdAt`
 			,`updatedAt`
 		FROM
 			`real_estate`
 		WHERE
 			`id` = 	#{id}
 	</select>
											<!-- int  -->
	<select id ="selectEstateType" parameterType="String"
 	resultType="com.penguin.spring.test.estate.domain.Estate">
 		SELECT
 			`id`
 			,`realtorId`
 			,`address`
 			,`area`
 			,`type`
 			,`price`
 			,`rentPrice`
 			,`createdAt`
 			,`updatedAt`
 		FROM
 			`real_estate`
 		WHERE
 		<!-- <![CDATA[ `rentPrice` < #{rentPrice} ]]>
 		 AND `type` = 월세-->
 		 
 			`type` = #{type}	
		ORDER BY `rentPrice`;
 			
 	</select> 	
 
 </mapper>